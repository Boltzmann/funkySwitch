<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmenttab1_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:rowCount="5"
    android:columnCount="2"
    android:useDefaultMargins="true">    
   
    <Button
        style="@style/CodeFont"
        android:id="@+id/N8LampOnButton"
        android:tag="on,N8Lamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_N8Lamp_On" 
        android:onClick="sendMessage" />
    
    <Button
        style="@style/CodeFont.yellow"
        android:id="@+id/N8LampOffButton"
        android:tag="off,N8Lamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_N8Lamp_Off" 
        android:onClick="sendMessage" />


    <Button
        style="@style/CodeFont"
        android:id="@+id/TableLampOnButton"
        android:tag="on,TableLamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:onClick="sendMessage"
        android:text="@string/button_TableLamp_On" />

    <Button
        style="@style/CodeFont.yellow"
        android:id="@+id/TableLampOffButton"
        android:tag="off,TableLamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:onClick="sendMessage"
        android:text="@string/button_TableLamp_Off" />
    

     <Button
        style="@style/CodeFont"
        android:id="@+id/LLampOnButton"
        android:tag="on,LivingRoomLamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:onClick="sendMessage"
        android:text="@string/button_LLamp_On" />
        
    <Button
        style="@style/CodeFont.yellow"
        android:id="@+id/LLampOffButton"
        android:tag="off,LivingRoomLamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:onClick="sendMessage"
        android:text="@string/button_LLamp_Off" />
    
    <Button
        style="@style/CodeFont"
        android:id="@+id/AllLightsOnButton"
        android:tag="on,N8Lamp,LivingRoomLamp,TableLamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
		android:onClick="sendMessage"
        android:text="@string/button_AllLights_On" />

     <Button
        style="@style/CodeFont.yellow"
        android:id="@+id/AllLightsOffButton"
        android:tag="off,N8Lamp,LivingRoomLamp,TableLamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:onClick="sendMessage"
        android:text="@string/button_AllLights_Off" />
    
</GridLayout>