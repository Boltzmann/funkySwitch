<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmenttab3_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:rowCount="5"
    android:columnCount="2"
    android:useDefaultMargins="true" >
    
    <Button
        style="@style/CodeFont"
        android:id="@+id/TestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_Test" 
        android:onClick="createTestFile" />
    
    <Button
        style="@style/CodeFont.yellow"
        android:id="@+id/AllOffButton"
        android:tag="off,N8Lamp,LivingRoomLamp,TableLamp,BIGSCREEN,Variable,Printer,Coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_gravity="fill_horizontal"
        android:text="@string/button_All_Off" 
        android:onClick="sendMessage" />
    
    <Button
        style="@style/CodeFont"
        android:id="@+id/activity_simple_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/importKey"
        android:onClick="activity_simple_open"/>
    
