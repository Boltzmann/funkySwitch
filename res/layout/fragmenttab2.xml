<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmenttab2_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:rowCount="5"
    android:columnCount="2"
    android:useDefaultMargins="true" >

    
    <Button
        style="@style/CodeFont"
        android:id="@+id/PrinterOnButton"
        android:tag="on,Printer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_Printer_On" 
        android:onClick="sendMessage" />

     <Button
        style="@style/CodeFont.yellow"
        android:id="@+id/PrinterOffButton"
        android:tag="off,Printer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_Printer_Off" 
        android:onClick="sendMessage" />
     
     <Button
        style="@style/CodeFont"
        android:id="@+id/CoffeeOnButton"
        android:tag="on,Coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_Coffee_On" 
        android:onClick="sendMessage" />
     
    <Button
        style="@style/CodeFont.yellow"
        android:id="@+id/CoffeeOffButton"
        android:tag="off,Coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_Coffee_Off" 
        android:onClick="sendMessage" />
    
    <Button
        style="@style/CodeFont"
        android:id="@+id/VariableOnButton"
        android:tag="on,Variable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_Variable_On" 
        android:onClick="sendMessage" />
    
    <Button
        style="@style/CodeFont.yellow"
        android:id="@+id/VariableOffButton"
        android:tag="off,Variable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_Variable_Off" 
        android:onClick="sendMessage" />
    
     <Button
        style="@style/CodeFont"
        android:id="@+id/ScreenOnButton"
        android:tag="on,BIGSCREEN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_Screen_On" 
        android:onClick="sendMessage" />
     
     <Button
        style="@style/CodeFont.yellow"
        android:id="@+id/ScreenOffButton"
        android:tag="off,BIGSCREEN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_Screen_Off" 
        android:onClick="sendMessage" />
    
      <Button
        style="@style/CodeFont"
        android:id="@+id/VolumeUpButton"
        android:tag="LAUTER> LAUTER.out 2> LAUTER.err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_volume_UP" 
        android:onClick="simpleSendCmd" />
     
     <Button
        style="@style/CodeFont.yellow"
        android:id="@+id/VolumeDownButton"
        android:tag="LEISER > LEISER.out 2> LEISER.err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_volume_DOWN" 
        android:onClick="simpleSendCmd" />

     <Button
        style="@style/CodeFont"
        android:id="@+id/TapeOnOffButton"
        android:tag="TAPE_ON_OFF> TAPE.out 2> TAPE.err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_tape_on_off" 
        android:onClick="simpleSendCmd" />

     <Button
        style="@style/CodeFont.yellow"
        android:id="@+id/Silence"
        android:tag="SILENCE > SILENCE.out 2> SILENCE.err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_silence" 
        android:onClick="simpleSendCmd" />
     
</GridLayout>